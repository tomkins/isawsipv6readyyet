---
layout: ratings
permalink: '/ratings/'
---

<table class="table">
  <thead>
    <tr>
      <th scope="col">Service</th>
      <th scope="col">Rating</th>
      <th scope="col">Updated</th>
    </tr>
  </thead>
  <tbody>
    {% for service in services %}
      <tr>
        <td>{{ service.name }}</td>
        <td>
          {% if service.score %}
            {{ service.score }}/5
          {% else %}
            -
          {% endif %}
        </td>
        <td>
          {{ service.updated }}
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>
